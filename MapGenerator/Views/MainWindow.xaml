<Window x:Class="MapGenerator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapGenerator"
        xmlns:viewModels="clr-namespace:MapGenerator.ViewModels"
        xmlns:controls="clr-namespace:MapGenerator.Controls"
        mc:Ignorable="d"
        Title="NoiseMapGenerator" 
        Height="450" 
        Width="800"
        MinWidth="200"
        MinHeight="200"
        Background="DimGray"
        Focusable="True"
        viewModels:ViewModelLocator.AutoWireViewModel="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MapGenerator;component/Styles/ControlStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="ToolBar"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                BorderThickness="1"
                BorderBrush="Black">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="GenerateButton"
                        Content="Generate"
                        Width="60"
                        Height="30"
                        Margin="5"
                        BorderThickness="2"
                        BorderBrush="Black"
                        Command="{Binding GenerateMapCommand}"/>
                <Button x:Name="SaveButton"
                        Content="Save"
                        Width="60"
                        Height="30"
                        Margin="5"
                        BorderThickness="2"
                        BorderBrush="Black"
                        Command="{Binding SaveMapCommand}"/>
            </StackPanel>
        </Border>
        <Border x:Name="Image"
                Grid.Row="1"
                Grid.Column="0"
                BorderThickness="1"
                BorderBrush="Black"
                Background="LightSlateGray">
            <Image Source="{Binding Image}"
                   Margin="5"/>
        </Border>
        <Border x:Name="Settings"
                Grid.Row="1"
                Grid.Column="1"
                BorderThickness="1"
                BorderBrush="Black"
                Background="DarkGray">
            
            <StackPanel Orientation="Vertical">
                <Border x:Name="ImageParamsSection" 
                        BorderThickness="2"
                        BorderBrush="Black"
                        Margin="5">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Map Width:  "
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            <Label Content="{Binding MapSideSize}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Map Height: "
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            <Label Content="{Binding MapSideSize}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border x:Name="PowerGenerationSection" 
                        BorderThickness="2"
                        BorderBrush="Black"
                        Margin="5">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <Label x:Name="CurrentPowerLabel"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Content="Current generation value: "/>
                            <Label x:Name="CurrentPowerValue"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Content="{Binding PowerOfTwo}"
                                   Margin="5"/>
                        </StackPanel>
                        
                        <Slider Orientation="Horizontal"
                                TickFrequency="1"
                                Minimum="{Binding MinPowerValue}"
                                Maximum="{Binding MaxPowerValue}"
                                Value="{Binding PowerOfTwo}"
                                TickPlacement="BottomRight"
                                IsSelectionRangeEnabled="True"
                                Margin="5"/>
                    </StackPanel>
                </Border>
                <Border x:Name="RoughnessSection" 
                        BorderThickness="2"
                        BorderBrush="Black"
                        Margin="5">
                    <controls:NumericUpDown x:Name="RoughnessUpDown"
                                            Style="{StaticResource NumericUpDownStyle}"
                                            Margin="5"
                                            Value="{Binding Roughness, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                            Background="LightGray"
                                            Foreground="Black"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Minimum="1"
                                            Maximum="100"/>
                </Border>
                
            </StackPanel>
        </Border>

    </Grid>
    <Window.InputBindings>
        <KeyBinding Command="{Binding GenerateMapCommand}"
                    Key="F5"/>
        <KeyBinding Command="{Binding SaveMapCommand}"
                    Key="S"
                    Modifiers="Control"/>
    </Window.InputBindings>
</Window>
